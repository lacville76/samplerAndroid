<GridLayout xmlns:seekarc="http://schemas.android.com/apk/res/com.ms.activities"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black2"
    android:clickable="true"
    android:columnCount="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="500dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_row="2" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_marginRight="15dp"
        android:layout_row="4" >

        <Button
            android:id="@+id/Button05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_marginRight="15dp"
        android:layout_row="6" >

        <Button
            android:id="@+id/Button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="88dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4" >

        <TextView
            android:id="@+id/timerValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:text="00:00:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:onClick="onClick"
			android:clickable="true"
             />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timerValue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_marginRight="15dp"
        android:layout_row="5" >

        <Button
            android:id="@+id/Button09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/Button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minHeight="96dp"
            android:minWidth="96dp" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:checked="true" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_row="0"
        android:checked="false"
        android:enabled="false" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_row="0"
        android:enabled="false"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/startButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="50dp"
        android:layout_row="5"
        android:text="Start" />

    <Button
        android:id="@+id/resetButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="120dp"
        android:layout_row="5"
        android:text="Reset" />

    <TextView
        android:id="@+id/padstxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="23dp"
        android:layout_row="5"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/clearButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="190dp"
        android:layout_row="5"
        android:text="Clear" />

    <Button
        android:id="@+id/saveButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="120dp"
        android:layout_row="5"
        android:text="Save" />

    <Button
        android:id="@+id/loadButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="50dp"
        android:layout_row="5"
        android:text="Load" />

    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/seekArc"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:padding="30dp"
        seekarc:clockwise="true"
        seekarc:max="100"
        seekarc:rotation="180"
        android:layout_marginLeft="250dp"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"
        seekarc:touchInside="true" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="336dp"
        android:layout_height="89dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2" />

    <TextView
        android:id="@+id/txtChannels"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="6"
        android:text="Channel:1"
        android:onClick="onClick"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true" />

</GridLayout>