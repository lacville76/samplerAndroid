<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:id="@+id/myView"
    android:background="@drawable/black2"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SequencerActivity" >

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="0"
        android1:gravity="right" 
         android1:layout_marginTop="45dp">

        <ListView
            android1:id="@+id/android:list"
            android1:layout_width="818dp"
            android1:layout_height="wrap_content"
            android1:layout_marginTop="15dp" >
        </ListView>

    </LinearLayout>

    <RadioButton
        android1:id="@+id/radioButton1"
        android1:layout_column="0"
        android1:layout_gravity="center_horizontal|top"
        android1:layout_row="0" />

    <RadioButton
        android1:id="@+id/radioButton2"
        android1:layout_column="0"
        android1:layout_gravity="center_horizontal|top"
        android1:layout_marginLeft="40dp"
        android1:layout_row="0"
        android1:checked="false" />

       <RadioButton
           android1:id="@+id/radioButton3"
           android1:layout_column="0"
           android1:layout_gravity="center_horizontal|top"
           android1:layout_marginLeft="80dp"
           android1:layout_row="0"
           android1:checked="true"
           android1:enabled="true" />

</GridLayout>


  
