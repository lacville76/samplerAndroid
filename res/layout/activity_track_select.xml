<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:id="@+id/myView"
    android:background="@drawable/black2"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SequencerActivity" >

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="0"
        android1:gravity="right" >

        <ListView
            android1:id="@+id/listView1"
            android1:layout_width="833dp"
            android1:layout_height="464dp" >

        </ListView>

    </LinearLayout>

    <ScrollView
        android1:id="@+id/scrollView1"
        android1:layout_height="124dp"
        android1:layout_gravity="fill_horizontal" >

        <TextView
            android1:id="@+id/comments"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:text="TextView" />

    </ScrollView>

</GridLayout>